#always put a semicolon at the end of the sentence
#statements to create a table
CREATE table (tablename
  column1, datatype,
  column2, datatype,
  column3, datatype
  
 #table example
 CREATE TABLE celebs(id INTEGER,name TEXT, age INTEGER);

#insert data into table 
INSERT INTO celebs (id, name, age)
VALUES (1,'Justin Bieber',21);
#view all data from a table
SELECT*FROM celebs;

#make updates to table
UPDATE celebs
SET age = 44
WHERE id = 1;

#add column
ALTER TABLE celebs ADD COLUMN twitter_handle TEXT;
SELECT * FROM celebs;
#udpate record
UPDATE celebs
SET twitter_handle = '@taylorswift13'
WHERE id=4;
SELECT*FROM celebs;
DELETE FROM celebs WHERE twitter_handle IS NULL;

#Select distinct values
SELECT DISTINCT genre FROM movies;

#math symbols
= equals
!= not equals
> greater than
< less than
>= greater than or equal to
<= less than or equal to

#find similar values
SELECT*FROM movies WHERE name LIKE 'Se_en';

#% denotes where the other words begin for a "LIKE" statement. a% means words that start with an a.
SELECT*FROM movies WHERE name LIKE 'a%';

#range of values
SELECT * FROM movies
WHERE name BETWEEN 'A' AND 'J';

SELECT * FROM movies
WHERE year BETWEEN 1990 AND 2000
AND genre = 'comedy';

#order
SELECT * FROM movies
ORDER BY imdb_rating DESC;




